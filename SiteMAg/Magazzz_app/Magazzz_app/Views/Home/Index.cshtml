@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron ">
    <h1 class="display-4 text-center">STORE</h1>
</div>

<h1>Popular products</h1>

<div name="catalogitems" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
    @{
        Random rnd = new Random();
        for (int q = 0; q < 4; q++)
        {
            string src = $"https://img.mvideo.ru/Pdb/small_pic/200/10011{rnd.Next(9)}{rnd.Next(9)}{rnd.Next(9)}b.jpg";
            <div class="card m-3" style="width: 15rem; ">
                <img src="@src" class="card-img-top " alt="">
                <div class="card-body">
                    <h4 class="">Product @rnd.Next(12, 32)</h4>
                    <p class="">Product description.</p>
                    <h6 class="text-black-50 ">@rnd.Next(1000, 9999) RUB</h6>
                    <a href="#" class="btn stretched-link w-100 align-self-end btn btn-outline-primary">
                        Add to Cart
                    </a>
                </div>
            </div>
        }
    }
</div>